@{
    ViewData["Title"] = "Mark Sheet";
}

<h2>Enter Student Details</h2>

<form asp-controller="Home" asp-action="ViewMarks" method="post">
    <div class="validation-summary-errors text-danger" asp-validation-summary="All"></div> <!-- Validation Summary -->
    <div class="form-group">
        <label for="rollNumber">Roll Number:</label>
        <input type="text" class="form-control" id="rollNumber" name="rollNumber" required>
    </div>
    <div class="form-group">
        <label for="classId">Class ID:</label>
        <input type="text" class="form-control" id="classId" name="classId" required>
    </div>
    <br/>  
    <button type="submit" class="btn btn-primary">View Marksheet</button>
</form>